<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.sixeightinteractive.pg-display"
        versionCode = "10" 
        version     = "1.0.0" >

    <!-- versionCode is optional and Android only -->

    <name>Display It</name>

    <description>
        A test app to show custom internet based content 
    </description>

    <author href="https://sixeightinteractive.com" email="micah.murray@gmail.com">
        Micah J. Murray
    </author>
    
    <access origin="*" />

    <!-- only build for android -->
    <gap:platform name="android" />
    
    <!-- list plugins to use -->
    <gap:plugin name="com.badrit.macaddress" version="0.1.0" />
    <gap:plugin name="nl.x-services.plugins.insomnia" version="4.0.1" />
    <gap:plugin name="com.tonikorin.cordova.plugin.autostart" source="npm" />
    
    <preference name="permissions" value="none"/>

</widget>